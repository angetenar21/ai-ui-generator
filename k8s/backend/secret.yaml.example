# IMPORTANT: DO NOT commit this file with real secrets!
# This is an example. Create the actual secret using kubectl command.

# To create the secret, run this command:
# kubectl create secret generic backend-secrets \
#   --from-literal=GEMINI_API_KEY=your_actual_api_key_here \
#   -n ai-ui

# Or use this YAML (base64 encode your secret first):
# echo -n "your_api_key" | base64

apiVersion: v1
kind: Secret
metadata:
  name: backend-secrets
type: Opaque
data:
  # Base64 encoded values
  # GEMINI_API_KEY: <your-base64-encoded-key-here>

  # Example (DO NOT USE THIS):
  # GEMINI_API_KEY: bXlfc2VjcmV0X2tleQ==

# To decode: echo "bXlfc2VjcmV0X2tleQ==" | base64 -d
